#!/usr/bin/env bash

asdf() {
  set -eEu -o pipefail # bash strict mode
  IFS=$'\t\n' # Stricter IFS settings
  # shopt -s extdebug # for development

  local base_dir path cmd
  base_dir="$(dirname "$(dirname "$0")")"
  path="$base_dir/lib/commands:$PATH"

  cmd=$(PATH=$path command -v "asdf-$1") && {
    shift 1
    "$cmd" "$@"
    return $?
  }

  cmd=$(PATH=$path command -v "asdf-$1-$2") && {
    shift 2
    "$cmd" "$@"
    return $?
  }

  case "$1" in
    "--version")
      echo "VERSION"
      ;;
    *)
      echo "HELP"
      # asdf_cmd "help"
      ;;
  esac
}

asdf "$@"

